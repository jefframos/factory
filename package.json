{
    "name": "multi-game-project",
    "version": "1.0.0",
    "scripts": {
        "dev": "vite",
        "start": "vite",
        "build": "vite build",
        "assets": "cross-env node tools/build-assets.mjs && npm run build:json",
        "json": "node tools/json/build-json.mjs",
        "zip": "ts-node scripts/zip-game.ts",
        "build:all": "ts-node scripts/build-all.ts",
        "generate:index": "ts-node scripts/generate-index.ts",
        "image": "node tools/image/build-image.mjs",
        "image2": "npm run thumbs && npm run sizes && npm run image",
        "watch:image": "cross-env WATCH=true node tools/image/build-image.mjs",
        "font": "node tools/font/build-font.mjs",
        "watch:font": "cross-env WATCH=true node tools/font/build-font.mjs",
        "all": "npm run image && npm run font && npm run json && npm run audio",
        "audio": "node tools/audio/build-audio.mjs",
        "watch:audio": "cross-env WATCH=true node tools/audio/build-audio.mjs",
        "thumbs": "node tools/image/thumbs.mjs ./games/game4/raw-assets/non-preload/puzzles{copy} ./games/game4/raw-assets/images/thumbs{tps} 200x200 1",
        "sizes": "node tools/image/thumbs.mjs ./raw/puzzles ./games/game4/raw-assets/non-preload/puzzles{copy} 700x1000 0.7"
    },
    "devDependencies": {
        "@types/dat.gui": "^0.7.13",
        "@types/howler": "^2.2.12",
        "@types/sat": "^0.0.35",
        "@types/signals": "^1.0.4",
        "@types/stats.js": "^0.17.4",
        "archiver": "^5.3.1",
        "cross-env": "^7.0.3",
        "dotenv": "^16.5.0",
        "pixi.js": "7.4.2",
        "ts-node": "^10.9.2",
        "vite": "^4.5.0",
        "vite-plugin-static-copy": "^0.16.0"
    },
    "dependencies": {
        "@assetpack/core": "^1.4.0",
        "@pixi/filter-bevel": "^5.1.1",
        "@pixi/filter-drop-shadow": "^5.2.0",
        "@pixi/filter-glow": "^5.2.1",
        "dat.gui": "^0.7.9",
        "fs": "^0.0.1-security",
        "gsap": "^3.13.0",
        "howler": "^2.2.4",
        "sat": "^0.9.0",
        "signals": "^1.0.0",
        "stats.js": "^0.17.0"
    }
}
